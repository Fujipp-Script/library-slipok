{
  "name": "@fujipp/slipok",
  "version": "0.1.0",
  "description": "Lightweight SlipOK API client (TypeScript, retry, timeout, upload image/URL).",
  "license": "MIT",
  "author": "Dev (KMUTT)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fujipp/slipok-lib.git"
  },
  "bugs": { "url": "https://github.com/Fujipp/slipok-lib/issues" },
  "homepage": "https://github.com/Fujipp/slipok-lib#readme",

  "type": "commonjs",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },

  "files": ["dist/"],

  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "npm version patch && git push --follow-tags && npm publish --access public"
  },

  "keywords": ["slip", "ocr", "verification", "thai", "slipok"],

  "dependencies": {
    "axios": "^1.7.7",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@types/form-data": "^2.5.0",
    "@types/node": "^20",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4"
  }
}
